{
  "name": "keyless-notes",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "migrate:production": "turbo run migrate:production",
    "notes:dev-tools": "concurrently -n NOTES,WEBCOMPONENTS -c blue,magenta \"pnpm --filter notes dev\" \"pnpm --filter @keyless/web-components dev\"",

    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@8.7.4",
  "engines": {
    "node": ">=18"
  }
}
